{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug opengl2",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/opengl2",
            "args": [],

            // Pour que main() trouve tes shaders via un chemin relatif
            "cwd": "${workspaceFolder}",

            "stopAtEntry": false,
            "externalConsole": false,

            // GDB comme moteur de débogage
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",

            // Lance la build avant le débogage
            "preLaunchTask": "CMake: build",

            "setupCommands": [
                {
                    "description": "Activer pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],

            // Pour attraper aussi les exceptions C++
            "filterStdout": true,
            "filterStderr": true
        }
    ]
}
